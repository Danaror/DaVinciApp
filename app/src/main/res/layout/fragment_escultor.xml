<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".ui.home.HomeFragment">

    <ImageView
        android:id="@+id/image_cientifico"
        android:layout_width="332dp"
        android:layout_height="378dp"
        android:src="@drawable/david"
        app:layout_constraintBottom_toTopOf="@+id/text_cientifico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/text_cientifico"
        android:layout_width="214dp"
        android:layout_height="30dp"
        style="@style/miEstilo"
        android:text="@string/txt_escultor"
        app:layout_constraintBottom_toTopOf="@+id/ltext_cientifico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ltext_cientifico"
        app:layout_constraintTop_toBottomOf="@+id/image_cientifico"
        app:layout_constraintVertical_bias="0.883" />

    <TextView
        android:id="@+id/ltext_cientifico"
        android:layout_width="350dp"
        android:layout_height="235dp"
        style="@style/miEstilo"
        android:justificationMode="inter_word"
        android:text="@string/ltxt_escultor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_cientifico"
        app:layout_constraintVertical_bias="0.759" />
</androidx.constraintlayout.widget.ConstraintLayout>


